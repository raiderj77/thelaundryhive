# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ===========================
# AWS SES (Email)
# ===========================
AWS_SES_REGION=us-east-1
EMAIL_FROM=noreply@yourlaundry.com

# ===========================
# Twilio (SMS)
# ===========================
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM=+15551234567

# ===========================
# Google Maps
# ===========================
NEXT_PUBLIC_GOOGLE_MAPS_KEY=your_maps_api_key_here

# ===========================
# Stripe (Payments)
# ===========================
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# ===========================
# Firebase (Optional - for Realtime Updates)
NEXT_PUBLIC_FIREBASE_ENABLED=false
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
# When you're ready to use real Firebase instead of mock data:
# NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
# NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
